html
  include header.pug
  body
    .container
      div(class="d-flex justify-content-between")
        h5= 'bcbk session'
        a(href="/user/logout")
          button(class="btn btn-primary")= 'Logout'
      br
      .row
        table(class="table table-responsive")
          thead
            th= '#'
            th= 'name'
            th= 'speaker'
            th= 'start'
            th= 'end'
            th= 'room'
            th= 'edit'
          tbody
            each session, index in sessions
              tr
                th= index+1
                td= session.name
                td= session.speaker
                td #{moment(session.start).zone(0).format('HH:mm')}
                td #{moment(session.end).zone(0).format('HH:mm')}
                td= session.room
                td
                  a(href="/sessions/" + session.id)
                    button(class="btn btn-secondary")= 'edit'
